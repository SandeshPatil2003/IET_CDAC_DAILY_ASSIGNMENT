package com.sortingq.beans;

public class DoublyLinkedListz {
	
	Node head;
	
	
	public DoublyLinkedListz()
	{
		head=null;
	}
	
	
	class Node{
		
		int data;
		Node next;
		Node prev;
		
		
		Node(int data)
		{
			this.data=data;
			next=null;
			prev=null;
		}
	}


	public void addAtEndD(int data) {
		
		Node newNode = new Node(data);
		
		if(head==null)
		{
			
			head=newNode;
		}
		else {
			
			Node temp= head;
			
			
			while(temp.next!=null)
			{
				temp=temp.next;
				
			}
			
			
			newNode.next=temp.next;
			newNode.prev=temp;
			temp.next=newNode;
			
			
			
			
			
			
		}
		
	}


	public void display() {
		
		
		if(head==null)
		{
			System.out.println("dlist is empty");
			return;
		}
		
		
		Node temp = head;
		
		while(temp!=null)
		{
			
			if(temp.next!=null)
				System.out.print(temp.data+"-->");
			else
				System.out.print(temp.data);
			
			
			temp=temp.next;
		}
		
		System.out.println();
		
		
		
	}


	public void addAfterVal(int val, int data) {
		
		Node newNode = new Node(data);
		
		Node temp=head;
		
		if(head.data==val)
		{
			newNode.next=head.next;
			head.next=newNode;
		}
		else
		{
			
			while(temp.next!=null && temp.data!=val)
			{
				
				temp=temp.next;
			}
			
			if(temp.next!=null)
			{
				newNode.next=temp.next;
				newNode.prev=
				
				
			}
			
		}
		
	}

}
