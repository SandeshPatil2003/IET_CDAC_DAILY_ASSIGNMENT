package com.stackz.beans;

public class StackzList {
	Node top;
	
	
	public StackzList()
	{
		top=null;
	}
	
	
	class Node{
		
		
		int data;
		
		Node next;
		
		public Node(int data)
		{
			this.data=data;
			this.next=null;
			}
	}
	
	
	
	
	public void push(int data)
	{ Node newNode = new Node(data);
	
		if(top==null)
		{
			top=newNode;
			
		}
		else {
			
			newNode.next=top.next;
			top=newNode;
		
		}
	}
	
	
	public int pop()
	{
		if(!isEmpty())
		{
			Node temp = top;
			top=top.next;
			temp.next=null;
			System.out.println();
			return temp.data;
		}
		else {
			System.out.println("Empty List");
			return -1;
		}
	}
	
	
	public boolean isEmpty()
	{
		return top==null;
	}
	
	public void display()
	{
		Node temp=top;
		
		System.out.println(top);
		if(top==null)
		{
			System.out.println("list is empty");
		}
		else {
			while(temp!=null)
			{
				
				System.out.print(temp.data+"--->");
				temp=temp.next;
				
				
			}
			System.out.print("head");
			
			System.out.println();
			
		}
	}

}
