package com.sort.service;

public class SortService {
	
	
	
	public void heapSort(int arr[])
	{
		
		for(int i =(arr.length/2)-1;i>=0;i--)
		{
			heapify(arr,arr.length,i);
		}
		
		int n=arr.length;
		
		
		for(int i= n-1;i>=0;i--)
		{
				int temp = arr[0];
				arr[0]=arr[i];
				arr[i]=temp;
			heapify(arr,i,0);
		}
		
	}

	private void heapify(int[] arr, int length, int i) {
		
		
	}

}
