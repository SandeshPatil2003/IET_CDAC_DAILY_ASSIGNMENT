package com.list.beans;

import com.list.beans.SinglyLinkedList.Node;

public class DoublyLinkedList {
	
	Node head;
	
	
	
	
	
	public DoublyLinkedList() {
		super();
		this.head = null;
	}





	class Node{
		
		int data;
		Node next;
		Node prev;
		
		
		public Node()
		{
			
		}
		public Node(int data) {
			super();
			this.data = data;
			this.next = null;
			this.prev = null;
		}
		
		
		
		
	}
	
	
	
	public void addNode(int data)
	{
		Node newNode = new Node(data);
		
		Node temp = head;
		
		if(head==null)
		{
			head=newNode;
				
			
		}
		else {
			
		while(temp.next!=null)
		{
			temp=temp.next;
			
			
			
			
		}
		
		temp.next=newNode;
		newNode.prev=temp;
		
			
			
			
			
		}
		
		
		
		
	}
	
	
	public void display()
	{
		if(head==null)
		{
			System.out.println("List is Empty!");
		}
		
		else {
			
			for(Node temp=head;temp!=null;temp=temp.next) {
				
				if(temp.next!=null)
				System.out.print(temp.data+"--->");
				
				else
					System.out.print(temp.data);
			}
			
			System.out.println();
			
		}
	}
	
	
	
	
	public void addByPos(int pos, int data)
	{
		Node newNode = new Node(data);
		
		Node temp = head;
		
		if(pos==1)
		{
			
			newNode.next = head;
			head.prev=newNode;
			
			head=newNode;
			
			
			
			
		}
		else
		{
			for(int i=0;temp!=null && i<pos-2;i++)
			{
				
				temp=temp.next;
			}
			
			if(temp!=null && pos>1)
			{
				
				newNode.prev =temp;
				newNode.next= temp.next;
				temp.next = newNode;
				
				if(newNode.next!=null)
				newNode.next.prev= newNode;
				
				
				
				
				
			}
			else {
				
				System.out.println("Position not found");
			}
		}
		
		
		
		
		
		
	}

	
	
	public void deleteByVal(int val)
	{
		Node temp = head;
		
		if(head.data==val)
		{
			head=temp.next;
			temp.next.prev=null;
			temp.next=null;
			
			
		}
		else {
			
			
			while(temp!=null && temp.data!=val)
			{
				
				temp=temp.next;
			}
			
			if(temp!=null)
			{
				temp.prev.next=temp.next;
				if(temp.next!=null)
				temp.next.prev= temp.prev;
				temp.next=null;
				temp.prev=null;
				
				
				
			}
			else {
				
				System.out.println("Value not found");
			}
			
		}
		
	}

	
	public void deleteByPos

}
