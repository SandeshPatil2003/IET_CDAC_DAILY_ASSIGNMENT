package com.list.beans;

import com.list.beans.SinglyLinkedList.Node;

public class DoublyLinkedList {
	
	Node head;
	
	
	
	
	
	public DoublyLinkedList() {
		super();
		this.head = null;
	}





	class Node{
		
		int data;
		Node next;
		Node prev;
		
		
		public Node()
		{
			
		}
		public Node(int data) {
			super();
			this.data = data;
			this.next = null;
			this.prev = null;
		}
		
		
		
		
	}
	
	
	
	public void addNode(int data)
	{
		Node newNode = new Node(data);
		
		Node temp = head;
		
		if(head==null)
		{
			head=newNode;
				
			
		}
		else {
			
		while(temp.next!=null)
		{
			temp=temp.next;
			
			
			
			
		}
		
		temp.next=newNode;
		newNode.prev=temp;
		
			
			
			
			
		}
		
		
		
		
	}
	
	
	public void display()
	{
		if(head==null)
		{
			System.out.println("List is Empty!");
		}
		
		else {
			
			for(Node temp=head;temp!=null;temp=temp.next) {
				
				if(temp.next!=null)
				System.out.print(temp.data+"--->");
				
				else
					System.out.print(temp.data);
			}
			
			System.out.println();
			
		}
	}
	
	
	
	
	public void addByPos(int pos, int data)
	{
		Node newNode = new Node(data);
		
		Node temp = head;
		
		if(pos==1)
		{
			head=newNode;
			
			
		}
		else
		{
			for(int i=0;temp!=null && i<pos-2;i++)
			{
				
				temp=temp.next;
			}
			
			if(temp!=null)
			{
				temp.next= newNode
				
				
			}
		}
		
		
		
		
		
		
	}

}
