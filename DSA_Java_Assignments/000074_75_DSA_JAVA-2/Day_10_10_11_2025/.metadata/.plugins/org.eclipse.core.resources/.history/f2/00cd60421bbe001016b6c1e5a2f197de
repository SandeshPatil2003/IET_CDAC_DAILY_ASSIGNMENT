package com.hash.beans;

public class Hash {
	
	Node [] heads;
	
	
	public Hash()
	{
		heads=new Node[10];
		for(int i=0;i<10;i++)
		{
			heads[i]=null;
			
		}
	}
	
	
	
	class Node
	{
		int data;
		Node next;
		
		
		public Node(int data)
		{
			this.data=data;
			next=null;
		}
		
		
	}
	
	
	
	
	public void insert(int data)
	{
		Node newNode = new Node (data);
		
		int d=data%10;
		
		
		
		
		if(heads[d]==null)
		{
			heads[d]=newNode;
			
		}
		else {
			
			
			
			newNode.next=heads[d];
			heads[d]=newNode;
			
		}
		
		
	}
	
	
	public void display()
	{
		
		System.out.println("---Hash--Table---");
		for(int i=0;i<10;i++)
		{
			Node temp= heads[i];
			
			if(temp==null)
			{
				System.out.println("Empty List");
				
				continue;
			}
			
			System.out.print((i)+" ->");
		while(temp!=null)
		{
			if(temp.next!=null) {
			System.out.print(temp.data+"-->");}
			else {
				System.out.print(+temp.data);
			}
			temp=temp.next;
			
		}
		System.out.println();
		
		}
		System.out.println("-----------------");
	}

	
	public boolean search(int data)
	{
		
		
		int d = data%10;
		Node temp=heads[d];
		int i=1;
		
		while(temp!=null)
		{
			if(temp.data==data)
			{
				System.out.println(" search :found at bucket : "+d+" "+i+" pos.");
				return true;
			}
			
			temp=temp.next;
			i++;
			
		}
		System.out.println("search : Not found");
		return false;
	}









public void delete(int data)
{
	int d = data%10;
	Node temp=heads[d];
	Node prev=null;
	int i=1;
	
	
	if(heads[d].data==data)
	{
		heads[d]=heads[d].next;
		temp.next=null;
		System.out.println("deleted at bucket : "+d+" "+i+" pos.");
		return;
	}
	
	while(temp!=null)
	{ 
		if(temp.data==data)
		{
			if(prev!=null)
			prev.next=temp.next;
			temp=null;
			
			
			System.out.println("deleted at bucket : "+d+" "+i+" pos.");
			return;
		}
		prev=temp;
		temp=temp.next;
		i++;
		
	}
	System.out.println("delete : Not found");
	
}
}
	

