package com.sortingq.beans;

public class CircularQueue {
	
	
	int [] arr;
	int front;
	int rear;
	
	CircularQueue(int size)
	{
		arr= new int[size];
		
		front=-1;
		rear=-1;
	}
	
	boolean isEmpty()
	{
		if(front==-1 && rear==-1)
		{
			return true;
		}
		
	
		
		return false;
		
	}
	
	boolean isFull()
	{
		 if(front==rear+1)
		 {
			 return true;
		 }
		
		 if(front==0 && rear==arr.length-1)
		 {
			 return true;
		 }
		 
		 return false;
	}
	
	void enqueue(int data)
	{
		if(isFull())
		{
			dequeue(;)
			
		}
		
		if(isEmpty())
		{
			front=0;
			rear=0;
			arr[rear]=data;
		}
		else {
			
			
			
			
			rear=(rear+1)%arr.length;
			
			arr[rear]=data;
			
			
			
			
		}
		
		
		
		
		
		
	}
	
	
	int dequeue()
	{
		
	
		if(isEmpty())
		{
			System.out.println("Queue is Empty");
			
			return -1;
		}
		else {
			
			
			if(front==rear)
			{
				int temp = arr[front];
				
				front=-1;
				rear=-1;
				
				return temp;
			}
			
			
			
			int temp = arr[front];
			
			front= (front+1)%arr.length;
			
			return temp;
			
			
			
		}
		
	}
	
}
