package com.multithreading.test;

import com.multithreading.beans.*;
import com.multithreading.threads.*;

public class TestMultiThreading {

	public static void main(String[] args) {
		
		MyOperationClass ob = new MyOperationClass();
		
		//System.out.println("InMain function before 1st thread start ");
		
		MyFactorialThread fth = new MyFactorialThread(5,ob);
		
		fth.start();
		MyPrimeCheckThread pth = new MyPrimeCheckThread(9, ob);
		pth.start();
		
		
		MyTimesTableThread tth = new MyTimesTableThread(2,ob);
		tth.start();
		
		try {
			fth.join();
			pth.join();
			tth.join();
		}catch(InterruptedException e) {
			System.out.println(e.getMessage());
		}
		
			System.out.println("Main function ends here ");
	}

}
