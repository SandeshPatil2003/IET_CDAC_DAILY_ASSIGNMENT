package com.multithreading.beans;

public class MyOperationClass {
	
	public int factorial(int n) {
		int fact = 1;
		
		for(int i=1;i<n;i++) {
			fact*=i;
		}
		return fact ;
	}
	
	
	public boolean checkIsPrime(int n) {
		
		for(int i=2;i<n;i++) {
			if(n%i==0)
				return false;
			
		}
		return true;
	}
	
	public void printTimesTable(int n) {
		for(int i =1;i <=10;i++) {
			System.out.println(n+"*"+i);
		}
	}
}
