		return sdao.searchByMarks(avg);
	}

	@Override
	public List<Student> sortByMarks() {
		
		return sdao.sortByMarks();
	}

	@Override
	public List<Student> sortByName() {
		return sdao.sortByName();
	}

	@Override
	public List<Student> sortById() {
	
		return sdao.sortById();
	}

