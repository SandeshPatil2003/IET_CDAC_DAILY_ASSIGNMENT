		return sdao.updateM1(id,m1);
	}

	@Override
	public boolean updateM1_M2_M3(int id, double m1, double m2, double m3) {
		 return sdao.updateM1_M2_M3(id,m1,m2,m3);
	}

	@Override
	public boolean deleteById(int id) {
		Student s = sdao.searchById(id);
		return sdao.deleteById(s);
		
	}

