package com.student.service;

import java.util.*;

import com.student.beans.*;
import com.student.dao.StudentDao;
import com.student.dao.StudentDaoImpl;

public class StudentServiceImpl implements StudentService {
	
	
	StudentDao sdao = new StudentDaoImpl();

	@Override
	public boolean addNewStudent() {
		
		Scanner sc = new Scanner (System.in);
		
		
		
		
		System.out.println("Enter Student id : ");
		
		int id=sc.nextInt();
		
		System.out.println("Enter Student Name : ");
		sc.nextLine();
		String name=sc.nextLine();
		
		System.out.println("Name :"+name);
		
		System.out.println("Enter Student Marks 1 : ");
		
		double m1=sc.nextDouble();
		
		System.out.println("Enter Student Marks 2 : ");
		
		double m2=sc.nextDouble();
		
		System.out.println("Enter Student Marks 3 : ");
		
		double m3=sc.nextDouble();
		
		double avg=(m1+m2+m3)/3;
		
		
		Student s= new Student(id,name,m1,m2,m3,avg);
		
		System.out.println("Name :"+s.getSname());
		
		boolean stat=sdao.save(s);
		
		
		
		if(stat)
		
		return true;
		else {


		return false;}
		
	}

	@Override
	public List<Student> displayAll() {
		List<Student> slist= sdao.getData();
		return slist;
		
//		if(slist!=null)
//		
//		slist.forEach(System.out::println);
//		
//		else
//		System.out.println("no data");
		
		
	}

	@Override
	public Student searchById(int id) {
		Student s = sdao.searchById(id);
		return s;
	}

	@Override
	public boolean updateMark1(int id, double m1) {
		boolean st = sdao.updateMark1(id,m1);
		return false;
	}

}
