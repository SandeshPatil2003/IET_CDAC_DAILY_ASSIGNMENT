package com.student.dao;

import java.util.*;


 

import com.student.beans.Student;

public class StudentDaoImpl implements StudentDao {
	
	
	static List<Student> slist= new ArrayList<>();
	
 static{
	slist.add(new Student(1,"sandesh",12,22,44,());
    slist.add(new Student(2,"pratik",50,60,70,80)); 
    slist.add(new Student(3, "Priya", 88, 75, 92, 60));
    slist.add(new Student(4, "Rahul", 55, 62, 80, 78));
    slist.add(new Student(5, "Anjali", 95, 90, 85, 99));
}

	@Override
	public boolean save(Student s) {
		
		slist.add(s);
		
		return true;


		
	}

	@Override
	public List<Student> getData() {
		
				return slist;
	}

	@Override
	public Student searchById(int id) {
		
		int pos = slist.indexOf(new Student(id));
		
		if(pos!=-1) {
			return slist.get(pos);
		}
		else {
			return null;
		}
		
	}

}
