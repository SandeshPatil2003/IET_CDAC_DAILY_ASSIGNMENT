package com.student.dao;

import java.util.*;


 

import com.student.beans.Student;

public class StudentDaoImpl implements StudentDao {
	
	
	static List<Student> slist= new ArrayList<>();
	
 static{
	slist.add(new Student(1,"sandesh",12,22,44,((12+22+44)/3)));
    slist.add(new Student(2,"pratik",50,60,70,((50+60+70)/3))); 
    slist.add(new Student(3, "Priya", 88, 75, 92, ((88+ 75+ 92)/3)));
    slist.add(new Student(4, "Rahul", 55, 62, 80,((55+ 62+ 80)/3)));
    slist.add(new Student(5, "Anjali", 95, 90, 85,((95+ 90+ 85)/3)));
}

	@Override
	public boolean save(Student s) {
		
		slist.add(s);
		
		return true;


		
	}

	@Override
	public List<Student> getData() {
		
				return slist;
	}

	@Override
	public Student searchById(int id) {
		
		int pos = slist.indexOf(new Student(id));
		
		if(pos!=-1) {
			return slist.get(pos);
		}
		else {
			return null;
		}
		
	}

	@Override
	public boolean updateMark1(int id, double m1) {
		Student s = searchById(id);
		
		if(s!=null) {
			s.setM1(m1);
			return true;
		}
		return false;
	}

	@Override
	public boolean updateMark1_2(int id, double m1, double m2) {
Student s = searchById(id);
		
		if(s!=null) {
			s.setM1(m1);
			s.setM2(m2);
			return true;
		}
		return false;
	}

}
