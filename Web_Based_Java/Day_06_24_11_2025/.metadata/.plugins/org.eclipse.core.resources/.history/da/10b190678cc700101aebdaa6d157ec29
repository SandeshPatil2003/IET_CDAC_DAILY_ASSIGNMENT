package com.crud.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.crud.beans.Employee;

public class EmployeeDaoImpl implements EmployeeDao {
	
	
	static Connection conn=null;
	
	static {
		
		conn=DBUtil.getMyConnection();
		
	}

	@Override
	public boolean saveEmp(Employee e) {
		
		try {
			PreparedStatement pst = conn.prepareStatement("insert into empdemo values(?,?,?,?)");
			
			pst.setInt(1, e.getEmpid());
			pst.setString(2,e.getEname());
			pst.setDouble(3, e.getSal());
			pst.setDate(4, java.sql.Date.valueOf(e.getHiredate()));
			
			int n=pst.executeUpdate();
			
			return n>0;
			
			
			
		} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		
		
		
		
		return false;
	}

	@Override
	public List<Employee> displayAll() {
		
		List<Employee> elist = new ArrayList<>();
		
		try {
			
			PreparedStatement pst = conn.prepareStatement("select * from empdemo");
			
		ResultSet rs = pst.executeQuery();
		
		while(rs.next())
		{
			elist.add(new Employee(rs.getInt(1),rs.getString(2),rs.getDouble(3),rs.getDate(4).toLocalDate()));
		}
			re
			
		} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		
		return null;
	}
	
	
	

}
