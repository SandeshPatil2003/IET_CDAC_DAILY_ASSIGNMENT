package com.jdbcdemo.util;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class JdbcConn {

//	Connection conn = null;
//	
//	DriverManager.registerDriver

	static Connection conn = null;

	public static void main(String[] args) {

		Connection conn = getMyConnection();
		if (conn != null) {
			System.out.println("Connection done");
		} else {
			System.out.println("Connection not done");
		}

		try {
			Statement st = conn.createStatement();
			ResultSet rs = st.executeQuery("select * from empdemo");
			while (rs.next()) {

				System.out.println("empid " + rs.getInt(1));
				System.out.println("ename " + rs.getString(2));
				System.out.println("sal " + rs.getDouble(3));
				System.out.println("hiredate " + rs.getDouble(4));
				System.out.println("Mfgdate " + rs.getDate(5));
				System.out.println("---------------------");
			}

		} catch (SQLException e) {
			System.out.println(e.getMessage());
			e.printStackTrace();
		}
		closeMyConnection();
	}

	public static Connection getMyConnection() {
		if (conn == null) {
			try {
				DriverManager.registerDriver(new com.mysql.cj.jdbc.Driver());
				String url = "jdbc:mysql://192.168.10.117:3306/dac74?useSSL=false";
				conn = DriverManager.getConnection(url, "dac74", "welcome");
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return conn;
	}

	public static void closeMyConnection() {
		if (conn != null) {
			try {
				conn.close();
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}

}
