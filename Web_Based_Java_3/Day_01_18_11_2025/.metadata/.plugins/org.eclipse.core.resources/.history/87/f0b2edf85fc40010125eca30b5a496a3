package com.jdbcdemo.service;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;
import java.util.Scanner;

import com.jdbcdemo.beans.*;
import com.jdbcdemo.dao.EmployeeDao;
import com.jdbcdemo.dao.EmployeeDaoImpl;

public class EmployeeServiceImpl implements EmployeeService{
	
	private EmployeeDao edao;
	
	

	public EmployeeServiceImpl() {
		super();
		edao = new EmployeeDaoImpl();
	}



	@Override
	public boolean addEmployee(Scanner sc) {
		
		System.out.println("Enter employee id :");
		int eid = sc.nextInt();
		
		System.out.println("Enter employee name :");
		String name = sc.next();
		
		System.out.println("Enter employee salary :");
		double sal = sc.nextDouble();
		
		System.out.println("Enter employee hiredate as(dd/mm/yyyy):");
		String date = sc.next();
		
		LocalDate sqlDate = LocalDate.parse(date, DateTimeFormatter.ofPattern("dd/MM/yyyy"));
		
		Employee e = new Employee(eid,name,sal,sqlDate);
		
		
		
		
		
		return edao.save(e);
	}



	@Override
	public boolean updateSalary(int id, double newSal) {
		// TODO Auto-generated method stub
		
		return edao.updateSal;
	}

}
