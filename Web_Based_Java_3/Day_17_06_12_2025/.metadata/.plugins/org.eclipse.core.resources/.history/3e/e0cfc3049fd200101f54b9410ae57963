package com.studentregistration.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.studentregistration.beans.Student;
import com.studentregistration.service.StudentService;

import jakarta.servlet.http.HttpSession;

@Controller
@RequestMapping("/student")
public class StudentController {

	@Autowired
	StudentService sservice;
	
	@GetMapping("/showall")
	public ModelAndView showAll(HttpSession session) {
		
		Student user = (Student) session.getAttribute("user");
		if(user!=null)
		{
			List<Student> slist = sservice.getAllStudent();
			
			return new ModelAndView("showallstudent","slist",slist);
		}
		else {
			 return new ModelAndView("login","message","Please provide credentials");
		}
		
		
	}
	
	@GetMapping("/addstudent")
	public String addStudent(Model model) {
		
		model.addAttribute("s1",new Student());
		return "insertstudent";
	}

	@PostMapping("/insertdata")
	public String insertStudent(@ModelAttribute Student s1) {
			
			System.out.println(s1);
			boolean status = sservice.insertStudent(s1);
			if(status) {
				System.out.println("Successful");
				return "redirect:showall";
			}
			else {
				System.out.println("Error adding");
				return  "redirect:addstudent";
			}
			
	}
	
	
	@GetMapping("/editstudent/{sid}")
	public ModelAndView editStudent(@PathVariable int sid)
	{
			Student s1 =sservice.getById(sid);
		if(s1!=null)
		{
			
			return new  ModelAndView ("editstudent","s1",s1);
		}
		
		return new ModelAndView("redirect:showall");
	}
	
	@GetMapping("/updatestudent}")
	public ModelAndView editStudent(@ModelAttribute Student s)
	{
			Student s1 =sservice.getById(sid);
		if(s1!=null)
		{
			
			return new  ModelAndView ("editstudent","s1",s1);
		}
		
		return new ModelAndView("redirect:showall");
	}
	
	
	
}
