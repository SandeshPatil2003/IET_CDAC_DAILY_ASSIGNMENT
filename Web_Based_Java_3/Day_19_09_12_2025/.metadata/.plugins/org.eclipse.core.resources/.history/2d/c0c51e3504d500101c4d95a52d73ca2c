package com.demo.SpringBootMVCCURD.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import jakarta.servlet.http.HttpSession;

@Controller
@RequestMapping("/profile")
public class ProfileController {
	
	@GetMapping("/editprofile")
	public ModelAndView editProfile(HttpSession session)
	{
		if(session.getAttribute("user")==null) {
			return new ModelAndView("redirect:login/loginpage","message","Pehle login to karle bhai badme edit karna");
			
		}
		return new ModelAndView("editprfile","user",session.getAttribute("user"));
		
	}
	
	@PostMapping("updateprofile/{user.uid}")
	public ModelAndView updateProfile(HttpSession session) {
		
		return null;
		
	}
	

}
