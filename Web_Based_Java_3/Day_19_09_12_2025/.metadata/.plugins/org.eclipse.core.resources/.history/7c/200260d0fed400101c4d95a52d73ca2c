package com.demo.SpringBootMVCCURD.controller;

import java.time.LocalDate;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import com.demo.SpringBootMVCCURD.beans.Booking;
import com.demo.SpringBootMVCCURD.beans.User;
import com.demo.SpringBootMVCCURD.service.BookingService;

import jakarta.servlet.http.HttpSession;

@Controller
@RequestMapping("/booking")
public class BookingController {
	
	@Autowired
	BookingService bservice;
	
	
	@PostMapping("/confirmbooking")
	public ModelAndView confirmBooking(HttpSession session,
			@RequestParam int uid,
			@RequestParam int sid,
			@RequestParam String bookingDate,
			@RequestParam String sname,
			@RequestParam double price,
			Model model) {
		
		User user = (User) session.getAttribute("user");
		LocalDate date = LocalDate.parse(bookingDate);
		if(user == null) {
			return new ModelAndView("redirect:login/loginpage","message","Etha direct ksa ala be bhadvya, agodr login kr");
		}
		
		Booking booking = bservice.createBooking(user,sid,date);
		
		
	
		if(booking != null) {
			return new ModelAndView("confirmationPage");
		}
		return new ModelAndView("redirect:/services/showservices","message","Unable To Book Error Try after some time.");
		
	}
	
}
