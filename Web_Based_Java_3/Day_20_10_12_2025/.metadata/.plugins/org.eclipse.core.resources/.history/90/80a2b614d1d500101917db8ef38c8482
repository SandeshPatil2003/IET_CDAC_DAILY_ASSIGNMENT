package com.movies.movies.dao;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.movies.movies.beans.User;

@Repository
public interface LoginDao extends JpaRepository<User, Integer> {

	@Query("SELECT u FROM User u1 where u1.uname= :uname AND u1.password= :password")
	User validateUser(@Param( String uname, String password);

}
