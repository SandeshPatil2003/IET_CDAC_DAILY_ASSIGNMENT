package com.inheritance.beans;

import java.time.LocalDate;

import javax.persistence.Column;
import javax.persistence.DiscriminatorValue;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;


@Entity(name="102Perishable")
public class Perishable extends Product {
	
	
	@Column(name="Perishable_ID")
	private int ppid;
	
	@Column(name="EXP_Date")
	private LocalDate expdate;

	public Perishable(int pid, String pname, int qty, double price, LocalDate mfgdate,LocalDate expdate) {
		super(pid,pname,qty,price,mfgdate);
		this.expdate = expdate;
	}
	
	public Perishable(String pname, int qty, double price, LocalDate mfgdate,LocalDate expdate) {
		super(pname,qty,price,mfgdate);
		this.expdate = expdate;
	}

	public LocalDate getExpdate() {
		return expdate;
	}

	public void setExpdate(LocalDate expdate) {
		this.expdate = expdate;
	}

	@Override
	public String toString() {
		
		return super.toString()+"Perishable : expdate=" + expdate + "]";
	}
	
	
	
	

}
